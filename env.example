# RT Translator - 환경변수 설정 예제
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요

# OpenAI API 키 (필수)
# https://platform.openai.com/api-keys 에서 발급받으세요
OPENAI_API_KEY=your_openai_api_key_here

# 개발 모드 설정
NODE_ENV=development

# 앱 설정
APP_NAME=RT Translator
APP_VERSION=1.0.0
APP_DESCRIPTION=실시간 음성 번역 웹앱

# API 설정
API_TIMEOUT=30000
MAX_RETRIES=3

# 로깅 설정
LOG_LEVEL=info

# PWA 설정
PWA_ENABLED=true
CACHE_ENABLED=true
OFFLINE_ENABLED=false

# 보안 설정
SECURE_COOKIES=true
HTTPS_ONLY=false

# 개발 서버 설정 (선택사항)
DEV_PORT=3000
DEV_HOST=localhost

# 분석 및 모니터링 (선택사항)
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# 기능 플래그
FEATURE_SPEECH_RECOGNITION=true
FEATURE_SPEECH_SYNTHESIS=true
FEATURE_TRANSLATION_HISTORY=true
FEATURE_EXPORT=true
FEATURE_DARK_MODE=true

# 번역 설정
DEFAULT_SOURCE_LANGUAGE=ko
DEFAULT_TARGET_LANGUAGE=zh-CN
SUPPORTED_LANGUAGES=ko,zh-CN,ru,auto

# 음성 설정
DEFAULT_VOICE_SPEED=1.0
DEFAULT_VOICE_VOLUME=1.0
VOICE_TIMEOUT=10000

# 캐시 설정
TRANSLATION_CACHE_SIZE=100
HISTORY_CACHE_SIZE=1000
CACHE_EXPIRY=86400000

# GitHub Pages 배포 설정
GITHUB_PAGES_BRANCH=gh-pages
BASE_URL=/RT_Translater 